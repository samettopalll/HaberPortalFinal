@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "_layoutAdminLTE";

}

<h1 style="margin-left:270px">Kullanıcılar</h1>
<hr />
<div class="row" style="position:relative; left:270px">
    <div class="col-md-8"  >
        <div id="progress" ></div>


        <table class="table table-striped" id="tbUsers" >
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Adı Soyadı</th>
                    <th>Kullanıcı Adı</th>
                    <th>E-Mail</th>
                    <th>Şehir</th>
                </tr>
            </thead>
            <tbody>
            </tbody>

        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            LoadUsers();

            function LoadUsers() {

                $.ajax({
                    url: "/Home/UserListAjax",
                    type: "Get",
                    data: {},
                    success: function (data) {
                        $.each(data, function (index, item) {


                            var user = '<tr><td> ' + item.id + '</td><td>' + item.fullName + '</td><td>' + item.userName + '</td><td>' + item.email + '</td><td> ' + item.city + '</td>';

                            $("#tbUsers tbody").append(user);
                        });
                    },
                    error: function (e) {
                        console.log(e);
                    },
                });

            }

        });
    </script>
}